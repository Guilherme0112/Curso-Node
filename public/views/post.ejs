<!DOCTYPE html>
<html lang="pt_BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="shortcut icon" href="/images/icon.png" type="image/x-icon">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/post.css">
    <script src="../js/post.js"></script>
    <title>
        <%= post[0].titulo %>
    </title>
</head>
<body>
    <header>
        <a href="/">
            <img width="50" src="/images/icon.png" alt="Logo">
        </a>
        <a href="/alta">Em Alta</a>
        <% if(sessao) { %>
            <a href="/perfil">Perfil</a>
            <a href="/logout">Sair</a>
        <% } else { %>
            <a href="/login">Entrar</a>
            <a href="/register">Registrar</a>
        <% } %>
            
    </header>
    <main>
        <div class="box-post">
            <img src="../<%= post[0].foto %>" class="img-post">
            <h2 class="title-post"><%=  post[0].titulo  %></h2>
            <p class="post"><%=  post[0].postagem  %></p>
        </div>
        <div id="comentarios">
            <% if(perfil) { %>
                <form action="/comentarioAdd" method="post" id="form" class="input-comment">
                    <div class="w-100">
                    <img src="<%= perfil[0].foto %>" alt="Foto de Perfil" class="img-perfil">
                    <textarea name="comentario" class="input-text" id='input-text' rows="1" placeholder="Digite um comentÃ¡rio..."></textarea>
                </div>
                <button class="input-btn" id="btn">Comentar</button>
            </form>
            <% } %>

            <img src="../images/load.gif" id="load">
            <% if(comentarios.length > 0){%>
                <% comentarios.forEach(comentario => { %>
                <% comentario.criado = new Date(comentario.criado).toLocaleDateString('pt-BR') %>
                    <div class="box-comment">
                        <div class="box-comment-2">
                            <img src="../<%= comentario.foto %>" class="img-comment">
                            <p class="name-user-comment"><%= comentario.nome %></p>
                            <p class="time-comment"><%= comentario.criado %></p>
                            <button id="delBtn" value="Excluir"></button>
                        </div>
                        <p class="text-comment"><%= comentario.comentario %></p>
                    </div>
                <% }) %>
                <% } else { %>
                    <p id="msg-comment">Seja o primeiro a comentar</p>
                <% } %>
        </div>
    </main>
</body> 
</html>